<p id="notice"><%= notice %></p>

<p>
  <strong>Codigo:</strong>
  <%= @airplane.codigo %>
</p>

<p>
  <strong>Nombre:</strong>
  <%= @airplane.nombre %>
</p>

<p>
  <strong>listas de vuelos</strong>
  <table>
  <thead>
    <tr>
      <th>Origen</th>
      <th>Destino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplane.routes.each do |route| %>
      <tr>
        <td><%= route.origen %></td>
        <td><%= route.destino %></td>
        <td><%= route.horario_salida %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
</p>
<p>
<h2>Agregar ruta</h2>
<div class="field">
   <%= f.label :route, "Ruta de destino" %><br>
    <%= f.collection_check_boxes :route_ids, Route.all, :id, :origen %>
   

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
</p>

<%= link_to 'Edit', edit_airplane_path(@airplane) %> |
<%= link_to 'Back', airplanes_path %>
